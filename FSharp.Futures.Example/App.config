<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
  </startup>

  <!-- HttpWebRequest does not like the GitHub API; http://weblog.west-wind.com/posts/2007/Mar/29/The-server-committed-a-protocol-violation-with-WebRequest -->
  <system.net>
    <settings>
      <httpWebRequest useUnsafeHeaderParsing="true"/>
    </settings>
  </system.net>
</configuration>